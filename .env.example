# SlayFlashcards API Environment Configuration
# Copy this file to .env and update the values

# API Settings
SLAY_API_TITLE="SlayFlashcards API"
SLAY_API_VERSION="1.0.0"
SLAY_ENVIRONMENT="development"
SLAY_DEBUG=true

# Server Settings
SLAY_HOST="0.0.0.0"
SLAY_PORT=8000
SLAY_WORKERS=1
SLAY_RELOAD=true

# Database Settings
# SQLite (default for development)
SLAY_DATABASE_URL="sqlite:///./slayflashcards.db"
# PostgreSQL (recommended for production)
# SLAY_DATABASE_URL="postgresql://username:password@localhost:5432/slayflashcards"
SLAY_DATABASE_ECHO=false

# Authentication Settings
SLAY_JWT_SECRET_KEY="your-super-secret-key-change-this-in-production"
SLAY_JWT_ALGORITHM="HS256"
SLAY_JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
SLAY_JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Settings (comma-separated URLs)
SLAY_CORS_ORIGINS="http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173"
SLAY_CORS_ALLOW_CREDENTIALS=true

# Pagination Settings
SLAY_DEFAULT_PAGE_SIZE=20
SLAY_MAX_PAGE_SIZE=100

# File Upload Settings
SLAY_MAX_FILE_SIZE_MB=10
SLAY_ALLOWED_FILE_EXTENSIONS=".json,.txt,.csv"

# Logging Settings
SLAY_LOG_LEVEL="INFO"
SLAY_LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# Redis Settings (optional, for caching)
SLAY_REDIS_URL="redis://localhost:6379/0"
SLAY_REDIS_ENABLED=false

# Rate Limiting Settings
SLAY_RATE_LIMIT_ENABLED=true
SLAY_RATE_LIMIT_CALLS=100
SLAY_RATE_LIMIT_PERIOD=60

# Application Settings
SLAY_TIMEZONE="UTC"

# Production-specific settings (uncomment for production)
# SLAY_ENVIRONMENT="production"
# SLAY_DEBUG=false
# SLAY_WORKERS=4
# SLAY_RELOAD=false
# SLAY_LOG_LEVEL="WARNING"
# SLAY_DATABASE_URL="postgresql://user:password@db:5432/slayflashcards"
# SLAY_CORS_ORIGINS="https://yourdomain.com,https://app.yourdomain.com"