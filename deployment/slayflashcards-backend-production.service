[Unit]
Description=SlayFlashcards Backend API (Production)
After=network.target

[Service]
Type=simple
User=github
Group=github
WorkingDirectory=/opt/slayflashcards/production/backend
Environment="PATH=/opt/slayflashcards/production/backend/.venv/bin"
Environment="DATABASE_URL=sqlite:////opt/slayflashcards/production/backend/slayflashcards-production.db"
ExecStart=/opt/slayflashcards/production/backend/.venv/bin/uvicorn api.main_api:app --host 0.0.0.0 --port 8002
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
