[flake8]
# Maximum line length
max-line-length = 120

# Exclude directories
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    build,
    dist,
    *.egg-info,
    __init__.py

# Error codes to ignore
ignore =
    # W503: line break before binary operator (conflicts with black)
    W503,
    # W504: line break after binary operator (conflicts with black)
    W504,
    # E203: whitespace before ':' (conflicts with black)
    E203,
    # C901: function is too complex (optional - focus on functionality)
    C901

# Maximum complexity
max-complexity = 10

# Show source code for errors
show-source = True

# Show statistics at the end
statistics = True

# Count errors
count = True
